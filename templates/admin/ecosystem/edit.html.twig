{% extends 'layoutAdmin.html.twig' %}

{% block title %}{{ parent() }} | Modifier le membre{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('adminEcosystem') }}
{% endblock %}

{% block body %}
    <h1 class="text-center mt-4">Modifier le membre</h1>

    <div class="container">
        {{ include('admin/ecosystem/_form.html.twig', {'button_label': 'Modifier'}) }}
        <div class="row mx-0 d-flex justify-content-center">
            {{ include('admin/ecosystem/_delete_form.html.twig', {'button_label': 'Supprimer'}) }}
        </div>
        <div class="row mx-0">
            <a class="back text-decoration-none text-dark btn rounded-pill my-4 px-3 py-1"
               href="{{ ecosystem.isValidated == true ? path('ecosystem_index') : path('ecosystem_adhesion_index') }}">
                Retour
            </a>
        </div>
    </div>
{% endblock %}
