{% extends 'layoutAdmin.html.twig' %}

{% block title %}{{ parent() }} | Modifier un projet{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('adminProject') }}
{% endblock %}

{% block body %}
    <h1 class="text-center">Modifier un projet</h1>

    <div class="container">
        {{ include('admin/project/_form.html.twig', {'button_label': 'Modifier'}) }}
        <div class="row mx-0 d-flex justify-content-center">
            {{ include('admin/project/_delete_form.html.twig', {'button_label': 'Supprimer'}) }}
        </div>
        <div class="row mx-0">
            <a class="back text-decoration-none text-dark btn rounded-pill my-4 px-3 py-1"
               href="{{ path('admin_project_index') }}">Retour</a>
        </div>
    </div>
{% endblock %}
