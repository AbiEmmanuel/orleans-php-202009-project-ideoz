{% extends 'layoutAdmin.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('admin') }}
{% endblock %}

{% block body %}
    <h1 class="text-center mt-4">Panneau d'administration</h1>
    <section class="last-members">
        <h2 class="text-center">Membres en attente de validation</h2>
        <div class="container-fluid">
            <div class="row mx-0 justify-content-center">
                {% for member in members %}
                    <div class="card m-3 text-center">
                        <img src="{{ asset('uploads/logos/' ~ member.logo) }}"
                             class="card-img-top img-fluid logo" alt="logo">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <h3 class="text-center h4">{{ member.name }}</h3>
                            <a href="{{ path('ecosystem_edit', {'id': member.id}) }}"
                               class="more btn text-decoration-none text-center text-dark rounded-pill my-4 px-3 py-2">
                                Voir la fiche
                            </a>
                        </div>
                    </div>
                {% else %}
                    <h3 class="text-center h4">Aucun membre Ã  valider</h3>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}