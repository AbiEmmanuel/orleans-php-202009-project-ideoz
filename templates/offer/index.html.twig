{% extends 'layout.html.twig' %}

{% block title %}{{ parent() }} | {{ service.name }}{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('offer') }}
{% endblock %}

{% block body %}
    <main class="service{{ service.number }} all-services">
        <div class="header d-flex flex-column justify-content-center align-items-center mt-0">
            <h1 class="text-center mt-0 pt-0">{{ service.name |capitalize }}</h1>
            <p class="text-center text-light h3">{{ service.catchPhrase | capitalize }}</p>
        </div>
        <section class="container description">
            <div class="card mt-5 border-0">
                <div class="row mx-0 no-gutters">
                    <div class="col-lg-5 d-flex justify-content-center align-items-center d-lg-block">
                        <img src="{{ asset('build/images/photo_service' ~ service.number ~ '.jpg') }}"
                             class="card-img img-fluid photo" alt="photo">
                    </div>
                    <div class="col-lg-7">
                        <div class="card-body d-flex flex-column h-100 justify-content-between pt-5 p-lg-0">
                            <div class="card-text">{{ service.description | raw }}</div>
                            <div class="d-flex justify-content-center">
                                <a href="{{ path('contact') }}"
                                   class="button text-decoration-none btn-lg text-center rounded-pill mt-5 mt-lg-0 px-5 py-3">
                                    Contactez-moi
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="container example">
            {% if service.example %}
                <h2 class="text-center">Exemple d'intervention</h2>
                <p>{{ service.example | raw }}</p>
            {% endif %}
        </section>
        <section class="container price">
            <div class="row justify-content-center align-items-center mx-0">
                <div class="col-lg-4 text-center my-4">
                    <h3 class="m-0">Tarifs sur demande</h3>
                </div>
                <div class="col-lg-4 text-center my-4">
                    <a href="{{ path('contact') }}"
                       class="button text-decoration-none btn-lg rounded-pill text-center px-5 py-3">
                        Contactez-moi
                    </a>
                </div>
            </div>
        </section>
    </main>
{% endblock %}