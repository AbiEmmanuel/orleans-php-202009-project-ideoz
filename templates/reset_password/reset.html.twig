{% extends 'layout.html.twig' %}

{% block title %}{{ parent() }} | Réinitialisez votre mot de passe{% endblock %}
{% block stylesheets %}{{ encore_entry_link_tags('login') }}{% endblock %}

{% block body %}
<main>
    <div class="header mt-0 d-flex align-items-center justify-content-center">
        <h1 class="text-center text-light">Réinitialisation du mot de passe</h1>
    </div>
    <div class="container">
        <h2 class="text-center py-5">Réinitialisez votre mot de passe</h2>
        {{ form_start(resetForm) }}
            {{ form_row(resetForm.plainPassword) }}
        <div class="col text-center">
            <button class="button-yellow text-decoration-none btn-lg rounded-pill my-4 px-5 py-3" type="submit">
                Réinitialisation
            </button>
        </div>
    </div>
</main>

        {{ form_end(resetForm) }}
{% endblock %}
