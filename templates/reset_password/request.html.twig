{% extends 'layout.html.twig' %}

{% block title %}{{ parent() }} | Réinitialisez votre mot de passe{% endblock %}
{% block stylesheets %}{{ encore_entry_link_tags('login') }}{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <main>
        <div class="header mt-0 d-flex align-items-center justify-content-center">
            <h1 class="text-center text-light">Réinitialisez votre mot de passe</h1>
        </div>
        <div class="container">
            <h2 class="text-center py-5">Entrez votre adresse email</h2>
            {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}
            <div>
                <small>
                    Entrez votre adresse email et vous recevrez un lien pour réinitialiser votre mot de passe.
                </small>
            </div>
            <div class="col text-center">
                <button class="button-yellow text-decoration-none btn-lg rounded-pill my-4 px-5 py-3">Envoyer</button>
            </div>
            {{ form_end(requestForm) }}
        </div>
    </main>
{% endblock %}
