{% extends 'layoutAdmin.html.twig' %}

{% block title %}Testimony index{% endblock %}

{% block body %}
    <h1 class="text-center pt-3 my-5">Liste des témoignages</h1>
    <div class="container">
        <div class="d-flex justify-content-end mr-4 pb-4">
            <a title="Créer un commentaire" href="{{ path('admin_testimony_new') }}" class="bg-primary text-white p-2 rounded">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-plus-square-fill" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm6.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z"/>
                </svg>
            </a>
        </div>

    <table class="table table-striped">
        <thead class="bg-primary text-white">
        <tr>
            <th>Nom</th>
            <th>Contenu</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody >
        {% for testimony in testimonies %}
            <tr>
                <td>{{ testimony.ecosystem.name }}</td>
                <td>{{ testimony.content }}</td>
                <td>
                    <a title="Éditer" href="{{ path('admin_testimony_edit', {'id': testimony.id}) }}" class="btn bg-primary text-white rounded m-2 p-2 ">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"/>
                        </svg>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun témoignage trouvé...</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
{% endblock %}