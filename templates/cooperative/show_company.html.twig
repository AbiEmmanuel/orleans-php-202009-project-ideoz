{% extends 'layout.html.twig'%}

{% block title %}{{ parent () }} | Co-oZ - {{ company.name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('projects') }}
{% endblock %}
{% block body %}
    <main class="project">
        <div class="header mt-0 d-flex align-items-center justify-content-center">
            <h1 class="text-center">Fiche Entreprise</h1>
        </div>
        <section>
            <h2 class="text-center">{{ company.name }}</h2>
            <div class="container">
                <div class="row mx-0">
                    <div class="col d-flex justify-content-center align-items-center">
                        <img src="{{ vich_uploader_asset(company, 'logoFile') }}" alt="">
                    </div>
                    <div class="col">
                        <p class="my-4">{{ company.presentation | raw }}</p>
                        <p>
                            <span class="text-primary font-weight-bold">Secteur d'activité : </span>
                            {{ company.activity }}
                        </p>
                        <h4 class="my-2">Compétences</h4>

                            {% for competence in company.competences %}
                            <p class="badge badge-primary text-center text-capitalize px-2 my-2 py-2">
                                {{ competence.name | capitalize }}
                            </p>
                            {% else %}
                                <div class="d-flex flex-wrap align-items-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                         fill="currentColor"
                                         class="bi bi-x-circle-fill" viewBox="0 0 16 16">
                                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z"/>
                                    </svg>
                                    <p class="pl-2 mb-0">Pas de compétence associée à ce projet</p>
                                </div>
                            {% endfor %}
                    </div>
                </div>
                <div class="text-center my-5 ">
                    <a class="btn button-yellow rounded-pill text-white px-3 py-2 mx-3" href="{{ company.url }}"
                       target="_blank">
                                <span>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
                                    </svg>
                                </span>Voir leur site</a>
                    <a class="btn button-yellow rounded-pill text-white px-3 py-2" href="{{ path('cooperative_company_work', {'id' : company.id }) }}">
                             <span class="mr-2">
                                 <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-envelope" viewBox="0 0 16 16">
                                 <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2zm13 2.383l-4.758 2.855L15 11.114v-5.73zm-.034 6.878L9.271 8.82 8 9.583 6.728 8.82l-5.694 3.44A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.739zM1 11.114l4.758-2.876L1 5.383v5.73z"/>
                                 </svg>
                             </span>Être mis en relation</a>
                </div>
                <div class="row mt-4 mb-0 mx-0">
                    <a class="back text-decoration-none font-weight-bold btn rounded-pill my-4 px-3 py-1"
                       href="{{ path('cooperative_companies') }}">Retour</a>
                </div>
            </div>
        </section>
    </main>
{% endblock %}