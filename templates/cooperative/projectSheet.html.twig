{% extends 'layout.html.twig' %}

{% block title %}{{ parent () }} | Co-oZ - Projet {{ project.title }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('projects') }}
{% endblock %}

{% block body %}
    <main class="project">
        <div class="header mt-0 d-flex align-items-center justify-content-center">
            <h1>Fiche projet</h1>
        </div>
        <section class="container">
            <h2 class="text-center">{{ project.title | capitalize }}</h2>
            <div class="my-4">{{ project.presentation | raw }}</div>
            <p class="my-4">
                <span class="font-weight-bold">Ambition :</span>
                {{ project.purpose | capitalize }}
            </p>
            <p class="my-4">
                <span class="font-weight-bold">Porteur de projet :</span>
                {{ project.owner.name | title }}
            </p>
            <p class="my-4">
                <span class="font-weight-bold my-4">Compétences :</span>
            </p>
            {% for competence in project.competences %}
                <p class="badge badge-primary px-2 py-2 mx-2">{{ competence.name | capitalize }}</p>
            {% else %}
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                     fill="currentColor"
                     class="bi bi-x-circle-fill" viewBox="0 0 16 16">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z"/>
                </svg>
                <p class="pl-2">Pas de compétence associée à ce projet</p>
            {% endfor %}

            <div class="d-flex justify-content-center">
                <a href="{{ path("cooperative_project_participation", { id: project.id }) }}"
                   class="button-yellow text-decoration-none btn-lg rounded-pill mt-4 px-4 py-3">
                    Participer à ce projet
                </a>
            </div>
        </section>
    </main>
{% endblock %}
