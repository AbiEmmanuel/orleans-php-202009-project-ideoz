{% extends 'layout.html.twig' %}

{% block title %}{{ parent() }} | Mon profil d'entreprise{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('profile') }}
{% endblock %}

{% block body %}
<main>
    <div class="header mt-0 d-flex align-items-center justify-content-center">
        <h1 class="text-center text-light mt-5 d-flex align-self-center">Mon profil d'entreprise</h1>
    </div>
    <div class="container">
        <h2 class="text-center py-5">Entrez ici vos informations en tant qu'entreprise</h2>
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <div class="col text-center">
            <button class="button-yellow text-decoration-none btn-lg rounded-pill my-4 px-5 py-3">
                Valider
            </button>
        </div>

        {{ form_end(form) }}
    </div>
</main>
{% endblock %}
